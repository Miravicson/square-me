{
  "name": "transaction",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/transaction/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "transaction:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "transaction:build:development"
        },
        "production": {
          "buildTarget": "transaction:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../node_modules/.bin/typeorm migration:create src/migrations/migrations/{args.name}",
        "forwardAllArgs": true,
        "cwd": "{projectRoot}"
      }
    },
    "migration:gen": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:generate src/typeorm/migrations/{args.name} --pretty -d src/typeorm/data-source.ts",
        "forwardAllArgs": true,
        "cwd": "{projectRoot}",
        "args": ["name"]
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:run -d src/typeorm/data-source.ts",
        "cwd": "{projectRoot}"
      }
    }
  }
}
